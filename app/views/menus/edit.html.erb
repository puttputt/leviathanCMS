<h2><%= link_to "Back", :controller => "admin", :action=>"menu" %></h2>
<% form_for @menu, :url => menus_path do |f| -%>
<p><label for="Name">Name</label><br/>
<%= f.text_field :name %></p>

<p><label for="path">Path</label><br/>
 <%= f.text_field :path %></p>

<p><label for="position">Position</label><br/>
<%= f.text_field :position %></p>

<p><label for="Menu List">Menu List</label><br />
	<%= select :menus, :menulist_id, @menulist.map{|u| [u.name,u.id]} %>
<p><%= submit_tag 'Save' %></p>
<% end -%>