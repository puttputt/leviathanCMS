<%= error_messages_for :post %>

<p><%= @post.title %></p>

<p><%= @post.body %></p>

<p>Tagged under: <%= @post.tag_list %></p>

<%= render :partial => 'comments/newcomment' %>

<div id="comments">
<% for comment in @comments%>
  <%= render :partial => 'comments/comment', :object => comment %>
<%- end -%>
</div>
